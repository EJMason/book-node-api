{
  "name": "headspace-book-node-api",
  "version": "1.0.0",
  "description": "Simple REST API allowing users to add and remove books to a library",
  "main": "server.js",
  "repository": "https://github.com/EJMason/headspace-book-node-api.git",
  "author": "EJMason <eliotjunior@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node ./dist/server.js",
    "install:npm": "npm isntall && npm tsc && node ./dist/server.js",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --verbose",
    "test:api": "gulp watch:testAPI",
    "ts-watch": "tsc --watch",
    "cleaner": "rm -rf node_modules && rm -rf dist"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@types/sequelize": "^4.0.72",
    "@types/supertest": "^2.0.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "chalk": "^2.1.0",
    "cors": "^2.8.4",
    "dotenv": "^8.2.0",
    "express": "^4.15.4",
    "gulp-shell": "^0.6.3",
    "helmet": "^3.8.1",
    "inquirer": "^3.2.2",
    "morgan": "^1.9.1",
    "pg-monitor": "^1.3.1",
    "pg-promise": "^6.5.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/helmet": "^0.0.36",
    "@types/jest": "^20.0.8",
    "@types/node": "^13.7.0",
    "@types/pg-promise": "^5.4.3",
    "@types/winston": "^2.3.5",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-batch": "^1.0.5",
    "gulp-env": "^0.4.0",
    "gulp-nodemon": "^2.2.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-typescript": "^3.2.2",
    "gulp-watch": "^4.3.11",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "run-sequence": "^2.1.0",
    "supertest": "^3.0.0",
    "ts-jest": "^20.0.10",
    "tslint": "^5.7.0",
    "typescript": "^2.4.2"
  }
}
